extends layout

block content
  h2 Stats for #{freund.name}
  p This are the statistics for #{freund.name} as of #{zeit}

  div(class="spieler-bild-auf-freundeseite")
  include ./_image.jade

  table
    tbody
      tr
        th Name
        td= freund.name

        tr 
           th Country 
           td= freund.country
           
           tr 
             th Birthday 
             td= freund.birthday 
    
      tr
        th Team
        td= freund.team
    
      tr
        th Kills (Duo)
        td
          - if (statistik.global_stats && statistik.global_stats.duo)
            = statistik.global_stats.duo.kills
      
      tr
        th Kills (Solo)
        td
          - if (statistik.global_stats && statistik.global_stats.solo)
            = statistik.global_stats.solo.kills

  h3 Specs

  table
    tbody
      tr
        th Keyboard
        td
          a(href=freund.KeyboardLink)
            = freund.Keyboard
            img(src=freund.KeyboardPicture width=50)

      tr 
        th Mouse 
        td
          a(href=freund.MouseLink)
            = freund.Mouse
            img(src=freund.MousePicture width=40)

      tr
        th Headset
        td 
          a(href=freund.HeadsetLink)
            = freund.Headset
            img(src=freund.HeadsetPicture width=40)

      tr
        th Mousepad
        td 
          a(href=freund.MousepadLink)
            = freund.Mousepad
            img(src=freund.MousepadPicture width=40)



               

  pre
    = JSON.stringify(freund, null, 2)
    br
    = JSON.stringify(statistik, null, 2)

  